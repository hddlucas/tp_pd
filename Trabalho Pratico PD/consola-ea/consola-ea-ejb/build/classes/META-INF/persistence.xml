<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="consolaPU" transaction-type="JTA">
    <jta-data-source>jdbc/tp</jta-data-source>
    <class>models.AquisicaoProposta</class>
    <class>models.Categoria</class>
    <class>models.Componente</class>
    <class>models.Operador</class>
    <class>models.Perfil</class>
    <class>models.Produto</class>
    <class>models.ProdutoProposta</class>
    <class>models.Proposta</class>
    <class>models.Utilizador</class>
    <class>models.Mensagem</class>
    <class>models.AvaliacaoVendedor</class>
    <class>models.ComponenteProduto</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
